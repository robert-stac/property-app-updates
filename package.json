{
  "name": "buwembo-property-manager",
  "version": "3.1.0",
  "type": "module",
  "private": true,
  "main": "electron-main.js",
  "homepage": "https://robert-stac.github.io/property-app-updates/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "build": {
    "appId": "com.buwembo.propertymanager",
    "productName": "Property Management App",
    "copyright": "Copyright Â© 2026 Buwembo & Co. Advocates",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "extends": null
  },
  "dependencies": {
    "firebase": "^12.9.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "react-scripts": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0"
  }
}
