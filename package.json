{
  "name": "buwembo-property-manager",
  "version": "2.0.0",
  "private": true,
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.buwembo.propertymanager",
    "productName": "Buwembo Property Manager",
    "copyright": "Copyright Â© 2026 Buwembo & Co.",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "extends": null
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "react-scripts": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
